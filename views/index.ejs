<% include ./partials/header.ejs %>

<div class="container">
    <h2>Vaccine stock</h2>
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Vaccine</th>
                <th scope="col">Count</th>
                <th scope="col">Change</th>
            </tr>
        </thead>
        <tbody>
            <% for (i = 0; i <allVaccines.length ; i++){ %>
            <tr>
                <th scope="row"><%=allVaccines[i]%></th>
                <td scope="row"><%=allValues[i]%></td>
                <td scope="row">
                    <form action="/vaccines" class="ui form" method="post">
                    <input  type="number" name="<%=allVaccines[i]%>" size="4">
                    <button class = "btn btn-secondary btn-sml" type="submit" id = "<%=allVaccines[i]%>">submit</button>
                    </form>
                </td>
            </tr>
            <% }; %>
        </tbody>
    </table>
</div>

<script src="button.js"></script>


<% include ./partials/footer.ejs %>